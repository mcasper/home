<div class="container mt-4">
  <%= link_to("<-- Back to recipe", recipes_path(recipe)) %>
  <h1 style="margin: 35px; text-align: center;">Edit Recipe</h1>
</div>

<div class="container">
  <%= form_for recipe, url: recipe_path(recipe), action: :put do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :notes %>
      <%= f.text_area :notes, class: "form-control" %>
    </div>

    <%= f.submit(class: "btn btn-primary") %>
  <% end %>
</div>
